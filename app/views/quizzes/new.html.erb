<div class="main-category-container">
  <div class="category-page-style-container">
    <div class="category-titles-container">
      <div class="category-main-title">
        <h1>Choose your health goals</h1>
      </div>
      <div class="category-second-title">
        <h2>Select those that matter to you and we will explore them together</h2>
      </div>
    </div>
    <div class="centered-category-content-container">
      <!-- simple_form creates a new quiz -->
      <div class="row" data-controller="checkbox">
        <%= simple_form_for(@quiz) do |f| %>
          <%= f.input :categories,
                collection: @categories,
                as: :check_boxes,
                input_html: { class: "card-categories-checkbox" },
                item_wrapper_class: 'tag-item-categories' %>
          <%= f.button :submit, class: 'btn btn-primary btn-categories', value: 'Continue' %>
        <% end %>
      </div>
    </div>
  </div>
</div>



