
<% nutrients.each do |nutrient| %>
  <% nutri = Nutrient.find(nutrient) %>

  <% unsplash_url = "https://source.unsplash.com/200x200/?#{nutri.name}-supplement" %>

  <div class="nutrients-content-container">

    <div class="nutrient-image-container"
          style="background-image: url('<%= unsplash_url %>');">
    </div>

    <div class="nutrient-content-text">
      <div class="nutrient-name-container">
        <h2 class="nutrient-card-title">
          <%= nutri.name %>
        </h2>
      </div>
      <div class="nutrient-description-container">
        <p class="nutrient-card-body seventyone-chars">
          <!-- <%= nutri.description %> -->
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
        </p>
        <a class="button"
           tabindex="0"
           role="button"
           data-controller="popover"
           data-bs-toggle="popover"
           data-bs-trigger="focus"
           data-bs-placement="top"
           title="Add these nutrient rich foods to your diet"
           data-bs-content="<%= render "food_result_recommendation", nutri: nutri %>"
           data-bs-html=true>
           Learn More
           </a>

      </div>
    </div>

  </div>


<% end %>
