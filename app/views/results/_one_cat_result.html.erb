  <div class="results-content-container">
    <div class="category-container">
      <!-- Code below to generate images based on category name, currently disabled because it is not needed %> -->
      <!-- <div class="img-category-container"><img src="https://source.unsplash.com/random/300×300/?<%=@category.name%>" alt=""></div> -->
      <div class="img-category-container"><img src="https://source.unsplash.com/random/300×300/?sleeping" alt="Category-img"></div>
      <div class="category-content-text">
        <div class="category-name-container">
          <p><%= category.name %></p>
        </div>
        <div class="category-description-container">
          <p><%= category.description %></p>
        </div>
      </div>
    </div>

    <div class="nutrients-container">

      <% nutrients.each do |nutrient| %>
        <% nutri = Nutrient.find(nutrient) %>

        <% unsplash_url = "https://source.unsplash.com/200x200/?#{nutri.name}-supplement" %>

        <div class="nutrients-content-container" onclick="window.open('https://en.wikipedia.org/wiki/<%= nutri.name %>');">
          <div class="img-nutrient-container"><img src="<%= unsplash_url %>" alt=""></div>
          <div class="nutrient-content-text">
            <div class="nutrient-name-container">
              <p><%= nutri.name %></p>
            </div>
            <div class="nutrient-description-container">
              <p><%= nutri.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
