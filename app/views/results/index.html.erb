<div class="results-container">
  <br>
  <h5>Your quiz results</h5>
  <h4 id="title-all-results">You may benefit from adding the following nutrients to your diet</h4>
  <hr>
      <div class="advice-text-container">
        <%# TODO: WHEN THERE ARE NO RESULTS, THIS TITLE SHOULD DISAPPEAR %>
        <h3 id="title-nutrient-results"></h3>
      </div>
  <div class="results-content-container">

    <div class="total-nutrients-container">
      <% @categories.each_with_index do |category, index| %>
        <%= render "one_cat_result", category: category, nutrients: @categories_nutrients[index] %>
      <% end %>
    </div>
    <br>
    <br>
    <h4 class="categories-advice-title">Your responses revealed that you are experiencing difficulties with the following areas.</h4>
    <hr>
    <div class="total-categories-container">
      <% @categories.each_with_index do |category, index| %>
        <div class="one-category-content-container">
          <!-- <% unsplash_url_2 = "https://source.unsplash.com/200x200/?#{category.name}-drawing" %>
          <div class="image-categories-container-round">
            <img src="<%= unsplash_url_2 %>" alt="Category image">
          </div> -->
          <div class="category-content-alltext">
            <div class="category-name-container">
              <p class="category-title-p">
                <%= category.name %>
              </p>
            </div>
            <div class="category-description-container">
              <p>
                <%= category.description %>
              </p>
            </div>
          </div>
        </div>
        <hr>
      <% end %>
    </div>

  </div>
</div>
